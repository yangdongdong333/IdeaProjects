<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ydd.dao.StudentDao">

    <sql id="studentSQL">
        select id,name,email,age from student where
    </sql>

    <select id="selectStudentIf" resultType="com.ydd.domain.Student">
        select id,name,email,age from student
        where
        <!--使用java对象的属性值作为判断条件，语法：属性=xxx值-->
        <if test="name!=null and name!=''">
            name=#{name}
        </if>
        <if test="age>0">
            and age>#{age}
        </if>
    </select>

    <select id="selectStudentWhere" resultType="com.ydd.domain.Student">
        select id,name,email,age from student
        <where>
        <!--使用java对象的属性值作为判断条件，语法：属性=xxx值-->
        <if test="name!=null and name!=''">
            name=#{name}
        </if>
        <if test="age>0">
            and age>#{age}
        </if>
        </where>
    </select>

    <select id="selectStudentForEach" resultType="com.ydd.domain.Student">
        select id,name,email,age from student where id in
        <foreach collection="list" item="myid" open="(" close=")" separator=",">
            #{myid}
        </foreach>
    </select>

    <select id="selectStudentForEachTwo" resultType="com.ydd.domain.Student">
        select * from student where id in
        <foreach collection="list" item="stu" open="(" close=")" separator=",">
            #{stu.id}
        </foreach>
    </select>

<!--    重用SQL片段
    <select id="selectStudentForEachTwo" resultType="com.ydd.domain.Student">
        <include refid="studentSQL"></include> id in
        <foreach collection="list" item="stu" open="(" close=")" separator=",">
            #{stu.id}
        </foreach>
    </select>
-->

<!--    查询所有-->
    <select id="selectAll" resultType="com.ydd.domain.Student">
        select * from student order by id
    </select>
</mapper>